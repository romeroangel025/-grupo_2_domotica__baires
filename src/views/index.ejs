<!DOCTYPE html>
<html lang="en">
<!-- head (sit on top) -->
<%- include('./partials/head') %>


<body class="body__index">
    <!-- Header -->
    <%- include('./partials/header') %>


    <article class="">
       <section class="container">
          <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active " style="background-image: url('/carrucel/domotica-3.png'); background-size: cover;"  data-bs-interval="10000">
                <div class="carousel-caption d-none d-md-block">
                </div>

              </div>
              <div class="carousel-item"  style="background-image: url('/carrucel/domotica-2.png'); background-size: cover;" data-bs-interval="2000">
              
                <div class="carousel-caption d-none d-md-block">
                </div>
              </div>
              <div class="carousel-item"  style="background-image: url('/carrucel/domotica-1.jpg'); background-size: cover;">
              
                <div class="carousel-caption d-none d-md-block">
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

        </section>
    <main class="index_main" index_main>
        <h2>Productos destacados</h2>

        <section class="index_main_section">
          <% destacados.forEach(({title,images,description,price,discount,id}) => { %>
          <article class="index_main_section_article">
              <a href="/products/detail/<%= id %>">
                  <div class="index_main_section_article_div-imagen">
                      <img src="/imagenes/imageProducts/<%= images[0].name %>"  alt="ce">
                  </div>
              </a>
              
              <div class="index_main_section_article_div-datos">
                  
                  <h3>$<%= toThousand(price) %> </h3>
                  <p><%= title %> </p>
                  <h5> <i class="fa-solid fa-credit-card"></i>  3 cuotas sin interés de  <%= toThousand((price / 3).toFixed(0)) %> </h5>
              </div>
              <div class="index_main_section_article_div-button">
                <% if (locals.userLogin&&(locals.userLogin.rol==="user" )) { %>
                  <button type="submit" class="comprar" onclick="addCartItem('<%=id%>')">Comprar</button>
                  <% }else{ %>
                      <button type="submit" class="comprar">Comprar</button>
                      <% }%>
                  <a href="/products/detail/<%= id %>"><button type="menu" class="ver">Ver</button></a>
              </div>
          </article>
          <% }) %>
      </section>

  

        <h2>Oferta de la semana</h2>
        <section class="index_main_section">
          <% ofertas.forEach(({title,images,description,price,discount,id}) => { %>
          <article class="index_main_section_article">
              <a href="/products/detail/<%= id %>">
                  <div class="index_main_section_article_div-imagen">
                      <img src="/imagenes/imageProducts/<%= images[0].name %>"  alt="ce">
                  </div>
              </a>
              
              <div class="index_main_section_article_div-datos">
                  
                  <h3>$<%= toThousand(price) %> </h3>
                  <p><%= title %> </p>
                  <h5> <i class="fa-solid fa-credit-card"></i>  3 cuotas sin interés de  <%= toThousand((price / 3).toFixed(0)) %> </h5>
              </div>
              <div class="index_main_section_article_div-button">
                  <button type="submit" class="comprar">Comprar</button>
                  <a href="/products/detail/<%= id %>"><button type="menu" class="ver">Ver</button></a>
              </div>
          </article>
          <% }) %>
      </section>

        
    </main>
    <!-- footer -->
    <%- include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>